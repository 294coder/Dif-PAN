    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python 调试程序: 当前文件",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "accelerare: main",
            "type": "debugpy",
            "request": "launch",
            "module": "accelerate.commands.launch",
            "env": {
                "CUDA_VISIBLE_DEVICES": "0,1",
                "NCCL_P2P_LEVEL": "NVL",
                "NCCL_P2P_DISABLE": "1",
                "NCCL_IB_DISABLE": "1",
                "OMP_NUM_THREADS": "6",
            },            
            "console": "integratedTerminal",
            "args": [
                "--gpu_ids", "0,1",
                "--config_file", "configs/huggingface/accelerate.yaml",
                "accelerate_main.py",
                "--proj_name", "panMamba",
                "--arch", "panMamba",
                "-b", "22",
                "--device", "cuda:2",
                "--dataset", "gf2",
                "--warm_up_epochs", "0",
                "--num_worker", "6",
                "-e", "2000",
                "--aug_probs", "0.", "0.",
                "--loss", "l1ssim",
                "--val_n_epoch", "20",
                "--comment", "panMamba small config on gf2 dataset",
                "--logger_on", "--log_metrics"
            ],
            "showReturnValue": true,
            "redirectOutput": true,
            "justMyCode": false
        }
    ]
}